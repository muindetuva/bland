<h1 class="text-4xl font-bold text-center mb-2">Welcome Back</h1>
<h2 class="text-2xl text-gray-600 text-center mb-8">Sign in to your account</h2>

<% if flash[:alert] %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6 text-center">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6 text-center">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_with url: session_path, class: "space-y-6 mx-auto bg-white p-8 shadow-md rounded-lg" do |form| %>

  <!-- Email-->
  <div>
    <%= form.label :email_address, class: "block font-semibold text-gray-700" %>
    <%= form.email_field :email_address, required: true, value: params[:email_address],
                         class: "w-full mt-1 p-3 border border-gray-300 rounded-md" %>
  </div>

  <!-- Password-->
  <div>
    <%= form.label :password, class: "block font-semibold text-gray-700" %>
    <%= form.password_field :password, required: true, maxlength: 72,
                            class: "w-full mt-1 p-3 border border-gray-300 rounded-md" %>
  </div>

  <!--  Submit-->
  <div>
    <%= form.submit "Sign in", class: "w-full bg-black text-white py-3 px-4 rounded-md font-semibold hover:opacity-90 transition" %>
  </div>

<% end %>

