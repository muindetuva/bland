<div class="mt-20 flex flex-col md:flex-row md:items-start md:justify-center md:gap-12">

<!--  Book Cover and details-->
  <div class="flex flex-col items-center md:items-start text-center md:text-left">
    <!-- Book Cover -->
    <div class="w-56 h-72 bg-black text-white flex justify-center items-center rounded-lg shadow-lg">
      <p class="text-lg font-semibold text-center px-3">
        <%= @book.title %>
      </p>
    </div>

    <p class="text-2xl font-semibold mt-4">
      <%= @book.title %>
    </p>
    <p class="text-gray-600 mt-2">
      By <span class="font-bold"> <%= @book.author %> </span>
    </p>
    <p class="text-xs text-gray-500 mt-2">
      ISBN: <%= @book.isbn %>
    </p>

  </div>

  <!-- Available copies -->
  <p class="mt-4 text-gray-600">
    <%= @available_copies %> out of <%= @total_copies %> copies are available.
  </p>

  <% if @user_borrowing_record %>
    <p class="text-sm text-gray-500">You have already borrowed a copy of this book.</p>
    <%= button_to "Return Book", borrowing_record_path(@user_borrowing_record), method: :patch, class: "bg-red-600 text-white px-4 py-2 rounded-md font-semibold hover:bg-red-700" %>
  <% elsif @available_copy %>
    <%= button_to "Borrow", borrowing_records_path(book_copy_id: @available_copy.id), method: :post, class: "bg-black text-white px-4 py-2 rounded-md font-semibold hover:opacity-90 transition" %>
  <% else %>
    <p class="text-sm text-gray-500">ðŸ“š There are no available copies to borrow.</p>
  <% end %>




</div>
